<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"> <!-- NORMAL STATE -->
        <shape android:shape="rectangle">
            <padding android:top="@dimen/fab_padding"
                android:bottom="@dimen/fab_padding"
                android:left="@dimen/fab_padding"
                android:right="@dimen/fab_padding"/>
            <solid android:color="@color/colorPrimary"/>
            <corners android:radius="1000dp"/>
        </shape>
    </item>
    <item android:state_pressed="true"> <!-- PRESSED STATE -->
        <shape android:shape="rectangle">
            <padding android:top="@dimen/fab_padding"
                android:bottom="@dimen/fab_padding"
                android:left="@dimen/fab_padding"
                android:right="@dimen/fab_padding"/>
            <solid android:color="@color/colorPrimaryDark"/>
            <corners android:radius="1000dp"/>
        </shape>
    </item>
</selector>